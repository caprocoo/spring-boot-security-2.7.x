// AUTHORITY
CREATE TABLE CAPROCOO.OB_AUTHORITY (
	AUTHORITY_NAME VARCHAR2(20),
	CONSTRAINT OB_AUTHORITY_PK PRIMARY KEY (AUTHORITY_NAME)
);

// ACCOUNT_AUTHORITY
CREATE TABLE CAPROCOO.OB_ACCOUNT_AUTHORITY (
	ACCOUNT_ID VARCHAR2(50),
	AUTHORITY_NAME VARCHAR2(20),
	CONSTRAINT OB_ACCOUNT_AUTHORITY_PK PRIMARY KEY (ACCOUNT_ID,AUTHORITY_NAME)
);

//OB_ACCOUNT_AUTHORITY foreign keys 설정
ALTER TABLE CAPROCOO.OB_ACCOUNT_AUTHORITY ADD CONSTRAINT FK_OB_ACCOUNT FOREIGN KEY (ACCOUNT_ID) REFERENCES CAPROCOO.OB_ACCOUNT(ACCOUNT_ID);
ALTER TABLE CAPROCOO.OB_ACCOUNT_AUTHORITY ADD CONSTRAINT FK_OB_AUTHORITY FOREIGN KEY (AUTHORITY_NAME) REFERENCES CAPROCOO.OB_AUTHORITY(AUTHORITY_NAME);

